@article{motschmannCurrentFutureWater2022,
  title = {Current and Future Water Balance for Coupled Human-Natural Systems \textendash{} {{Insights}} from a Glacierized Catchment in {{Peru}}},
  author = {Motschmann, Alina and Teutsch, Claudia and Huggel, Christian and Seidel, Jochen and Le{\'o}n, Christian D. and Mu{\~n}oz, Randy and Sienel, Jessica and Drenkhan, Fabian and {Weimer-Jehle}, Wolfgang},
