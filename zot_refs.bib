@article{buytaertGlacialMeltContent2017,
  title = {Glacial Melt Content of Water Use in the Tropical {{Andes}}},
  author = {Buytaert, Wouter and Moulds, Simon and Acosta, Luis and Bi{\`e}vre, Bert De and Olmos, Carlos and Villacis, Marcos and Tovar, Carolina and Verbist, Koen M. J.},
